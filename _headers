
# HTML — short cache, always revalidate so deploys go live instantly
/*
  Cache-Control: public, max-age=0, must-revalidate

# CSS & JS — long cache (filename doesn't change but content does on redeploy)
/styles.css
  Cache-Control: public, max-age=31536000

/script.js
  Cache-Control: public, max-age=31536000

# Images — cache for a year
/images/*
  Cache-Control: public, max-age=31536000, immutable

/images to use for reviews/*
  Cache-Control: public, max-age=31536000, immutable
